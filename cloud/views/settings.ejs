<!doctype html><html lang="en"><head>     <meta charset="utf-8"> <meta name="viewport" content="width=device-width, initial-scale=1.0"> <meta name="description" content="LC Cargo Xpress, cargo company, export, fashion district"> <title>Settings</title> <link rel="stylesheet" href="cod/css/pure-min.css"> <link rel="stylesheet" href="cod/css/grids-responsive-min.css">	 	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Jura&amp;subset=all">	<link rel="stylesheet" type="text/css" href="cod/css/styleSettings.css">	  <script src="cod/js/js.js" type="text/javascript" charset="utf-8"></script>    <script src="cod/sweetalert2-master/dist/sweetalert2.min.js"></script>     <link rel="stylesheet" type="text/css" href="cod/sweetalert2-master/dist/sweetalert2.css"></head><body><% include partitions/pmenu.ejs %></br><script>function showAddStaff(){	document.getElementById("addStaffDiv").style.display = "block";	document.getElementById("tableStaffDiv").style.display = "none";	}function showTableStaff(){	document.getElementById("addStaffDiv").style.display = "none";	document.getElementById("tableStaffDiv").style.display = "block";	}</script>		<table align="center" class="NoHover">			<tr>				<td><a onclick="showAddStaff()" class="dc_gradient_button rounded"><font style="color: #606A76;"><b>Add Staff</b></font></a></td>				<td><a onclick="showTableStaff()" class="dc_gradient_button rounded"><font style="color: #606A76;"><b>Staff Members</b></font></a></td>				</tr>		</table>		<style>/* Customization to limit height of the menu */.custom-restricted {    height: 144px;    width: 150px;    border: 1px solid gray;    border-radius: 4px;}</style></br><div class="section" id="addStaffDiv">	<div class="cont">	<form name="createStaff"  action="/createStaff" method="post" onsubmit="return valRegStaff()">	<div class="cont-2">					<div class="cont-3"><p class="para"><span class="font">New Staff Member:</span></p></div>				</div>				<div class="cont-4">					<div class="cont-5"><p class="para-2"><span class="font-2">Name:</span></p></div>				</div>				<div class="cont-6">					<input type="text" name="staffName" class="input">				</div>				<div class="cont-7">					<div class="cont-8"><p class="para-3"><span class="font-3">Last Name</span><span class="font-4">:</span></p></div>				</div>				<div class="cont-9">					<input type="text" name="staffLastName" class="input-2">				</div>				<div class="cont-10">					<div class="cont-11"><p class="para-4"><span class="font-5">Email:</span></p></div>				</div>				<div class="cont-12">					<input type="email" name="staffEmail" class="input-3">				</div>				<div class="cont-13">					<div class="cont-14"><p class="para-5"><span class="font-6">Username:</span></p></div>				</div>				<div class="cont-15">					<input type="text" name="staffUsrname" class="input-4">				</div>				<div class="cont-16">					<div class="cont-17"><p class="para-6"><span class="font-7">Password:</span></p></div>				</div>				<div class="cont-18">					<input type="password" name="staffPassword" class="input-5">				</div>				<div class="cont-19">					<div class="cont-20"><p class="para-7"><span class="font-8">Confirm Pasword:</span></p></div>				</div>				<div class="cont-21">					<input type="password" name="staffCpass" class="input-6">				</div>				<div class="cont-22">					<input type="submit" class="button" value="Create">				</div>			</form>			</div>		</div><div class="pure-menu pure-menu-scrollable custom-restricted" style="position:absolute; top:89px; left:5px;">    <a href="#" class="pure-menu-link pure-menu-heading">Menu</a>    <ul class="pure-menu-list">        <li class="pure-menu-item"><a href="#" class="pure-menu-link">Staff</a></li>        <li class="pure-menu-item"><a href="/profile" class="pure-menu-link">Clients</a></li>        <li class="pure-menu-item"><a href="#" class="pure-menu-link">Agencies</a></li>    </ul></div></br><div id="tableStaffDiv" style="position:relative; margin-left: auto;	margin-right: auto; display:none;"><table class="pure-table pure-table-bordered" align="center">    <thead>        <tr>            <th><font style="color: white;">Name</font></th>            <th><font style="color: white;">Last Name</font></th>            <th><font style="color: white;">Username</font></th>			<th><font style="color: white;">Email</font></th>		    </tr>    </thead>    <tbody>				<% staffs.forEach(function(staff) { %>			        <tr id="onhoverTable">       <td><a href='/<%=staff.id%>' style="text-decoration: none;" target="blank"><%= staff.get("Name") %></a></td>            <td><%= staff.get("LastName") %></td>			<td><%= staff.get("username") %></td>			<td><%= staff.get("email") %></td>        </tr> <% }) %>     </tbody></table></div></body></html>