<table class="pure-table pure-table-bordered" align="left" >    <thead>        <tr>            <th><font style="color: white;">Name</font></th>            <th><font style="color: white;">Company</font></th>            <th><font style="color: white;">Country</font></th>			<th><font style="color: white;">Address</font></th>			<th><font style="color: white;">Tel</font></th>			<th><font style="color: white;">Email</font></th>			<th><font style="color: white;">Destination</font></th>		    </tr>    </thead>    <tbody>		<% clients.forEach(function(client) { %>			        <tr id="onhoverTable">            <td><a href='/<%=client.id%>' style="text-decoration: none;"><p class="pfont"><%= client.get("Name") %></p></a></td>            <td><p class="pfont"><%= client.get("Company") %></p></td>			<td><p class="pfont"><%= client.get("Country") %></p></td>			<td><a href="http://maps.google.com/?q=<%=client.get('Address')%> <%=client.get("City")%> <%=client.get('State')%>" target="blank" style="text-decoration: none;"><p class="pfont"><%= client.get("Address") %></p></td>			<td><p class="pfont"><%= client.get("Telephone") %></p></td>			<td><a href='mailto:<%=client.get("Email")%>' style="text-decoration: none;"><p class="pfont"><%= client.get("Email") %></p></a></td>			<td><p class="pfont"><%= client.get("Destination") %></p></td>        </tr> <% }) %>     </tbody></table>