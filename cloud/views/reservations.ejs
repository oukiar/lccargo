<!doctype html><html lang="en"><head>	       <meta charset="utf-8">	   <meta name="viewport" content="width=device-width, initial-scale=1.0">	   <meta name="description" content="Directory">	   <title>Clients Reservations</title>	   <link rel="stylesheet" href="cod/css/pure-min.css">	   <link rel="stylesheet" href="cod/css/grids-responsive-min.css">	       <link rel="stylesheet" href="cod/css/style.css">	   	<!--JQUERY, PARSE AND SWEET ALERT, JAVASCRIPT-->	       <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>	        <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>	       <script src="https://www.parsecdn.com/js/parse-1.2.8.min.js"></script>		       <link rel="stylesheet" href="cod/jquery/jquery-ui.css" type="text/css" media="screen" title="no title" charset="utf-8">	       <script src="cod/js/js.js" type="text/javascript" charset="utf-8"></script>	   	<!--SWEETALERT JAVASCRIPT ALERTS WITH HTML-->	   	<script src="cod/sweetalert2-master/dist/sweetalert2.min.js"></script>	   	<link rel="stylesheet" type="text/css" href="cod/sweetalert2-master/dist/sweetalert2.css">	   	<!--END JQUERY PARSE AND SWEET ALERT--></head><body>		<% include partitions/pmenu.ejs %>	<% include partitions/navmenu.ejs %></br>	<table align="center" class="NoHover">		<tr>			<td><a href="/mainclients" class="dc_gradient_button rounded"><font style="color: #606A76;"><b>Active Clients</b></font></a></td>			<td><a href="/clients" class="dc_gradient_button rounded"><font style="color: #606A76;"><b>Pending</b></font></a></td>			<td><a href="#" class="dc_gradient_button rounded"><font style="color: #606A76;"><b>Reservations</b></font></a></td>		</tr>	</table>	</br>	<div style="position:relative; left:200px; width:89%; ">		<fieldset style="border: 1px solid #82939E; border-radius: 25px; width:81%; height:987px; background-color:#F6F6F6;">	<form class="pure-form" method="post" action="/reservations">	    <fieldset>	        <legend><p class="font-3Small">Find a trip:</p></legend>	               <label for="filterby">By:</label>	               <select id="filterby" name="filterby">	                   <option value="ClientName">Client's name</option>					   <option value="Status">Status</option>					   <option value="Arrival">Arrival's date</option>					   <option value="Departure">Departure's date</option>	                   <option value="Airline">Airline</option>	                   <option value="Flight">Flight Number</option>					    <option value="People">People</option>	                   <option value="Destination">Destination</option>	                   <option value="Email">Email</option>	               </select>					<input type="text" placeholder="Search" id="searchtext" name="searchtext">	               	               <label for="showfirst">Show First:</label>	               <input type="number" value="5" style="width:60px;" id="showfirst" name="showfirst">			  	        <button type="submit" class="pure-button pure-button-primary">Search</button>	    </fieldset>	</form></br><script>	$("#filterby").change(function(){			if($("#filterby").val() == "Status" )		{			$("#searchtext").replaceWith("<select id='searchtext' name='searchtext'><option>Confirmed</option><option>Pending</option><option>Cancelled</option></select>");		}		else if($("#filterby").val() == "ClientName" ||				$("#filterby").val() == "Airline" ||				$("#filterby").val() == "Flight" ||				$("#filterby").val() == "People" ||				$("#filterby").val() == "Destination" ||				$("#filterby").val() == "Email" )		{			$("#searchtext").replaceWith("<input type='text' placeholder='Search' id='searchtext' name='searchtext'>");		}		else if($("#filterby").val() == "Arrival" ||				$("#filterby").val() == "Departure")		{			$("#searchtext").replaceWith("<input type='text'  placeholder='Click for select date' id='searchtext' name='searchtext'>");			$( "#searchtext" ).datepicker();		}	});	</script>	<table class="pure-table pure-table-bordered">	    <thead>	        <tr>				<th><font style="color: white;">Status</font></th>				<th><font style="color: white;">Client</font></th>	            <th><font style="color: white;">Arrival</font></th>	            <th><font style="color: white;">Departure</font></th>	            <th><font style="color: white;">Airline</font></th>				<th><font style="color: white;">Flight Number</font></th>				<th><font style="color: white;">Contact Phone</font></th>				<th><font style="color: white;">Destination Address</font></th>			    </tr>	    </thead>	    <tbody>	<% reservations.forEach(function(reservation){ %>	        <tr id="onhoverTable">				<td><div style='text-align:center;'>			<img src='<%= reservation.get("Icon") %>' width='25' height='25' alt='Status' style="cursor:pointer;" id='<%= reservation.get("Status") %>' onclick="<%= reservation.get("Status")%>C('<%= reservation.id %>', this.id)"></div><%= reservation.get("Status") %></td>			    <td><a href="/<%= reservation.get('ClientID')%>" target="blank" style="text-decoration: none;"><%= reservation.get("ClientName") %></td>				<td><%= reservation.get("Arrival") %></td>				<td><%= reservation.get("Departure") %></td>				<td><%= reservation.get("Airline") %></td>				<td><%= reservation.get("Flight") %></td>				<td><%= reservation.get("Telephone") %></td>				<td><%= reservation.get("Destination") %></td>				<td><a href="trip/<%=reservation.id%>" target="blank"><img src='/web/img/icons/view.png' width="25" height="25" alt="Status" style="cursor:pointer;"></a></td>								<td><img src='<%= reservation.get("Status2")%>' id='<%= reservation.get("Status") %>' width="25" height="25" alt="Change" onclick="<%= reservation.get("Status")%>D('<%= reservation.id %>', this.id)" style="cursor:pointer;"></td>	        </tr>	 <% }) %>	    </tbody>	</table></fieldset></div></body></html>